generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

enum CategoryProps {
  Hatches
  Picapes
  Sedan
  SUVs
  Carros_Eletricos
  Carros_economicos
  Carros_para_Familia
  Carros_a_Diesel
  Carros_de_Luxo
}

enum BrandProps {
  Toyota
  Honda
  Volkswagen
  Hyundai
  Fiat
  Caoa_Chery
  Bmw
  Renault
  Jeep
  Ram
  Nissan
  Peugeot
  Chevrolet
  Jac
  Land_Rover
  Mercedes
  Mitsubishi
  Volvo
  Rolls_Royce
  Subaru
  Porsche
  Suzuki
  Mercedes_AMG
  Lexus
  Kia
  Maserati
  Mini
  MCLaren
  Jaguar
  Haval
  Audi
  Citroen
  Ford
  Aston_Martin
}

model Car {
  id                String   @id @default(uuid())
  linkImg           String
  name              String
  ownerOfTheProduct String
  model             String
  description       String
  cor               String
  Cambio            String
  vehicleItems      String
  kmRounds          String
  Combustivel       String
  Year              String
  Price             String
  AceitaTroca       String
  Whatsapp          String
  category          Category @relation(fields: [categoryId], references: [id])
  categoryId        String
  brand             Brand    @relation(fields: [brandId], references: [id])
  brandId           String
}

model Category {
  id        String          @id @default(uuid())
  categoria CategoryProps[]
  cars      Car[]
}

model Brand {
  id    String       @id @default(uuid())
  brand BrandProps[]
  cars  Car[]
}
