generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

enum CategoryProps {
  Hatche
  Picape
  Sedan
  SUV
  Carro_Eletrico
  Carro_economico
  Carro_para_Familia
  Carro_a_Diesel
  Carro_de_Luxo
}

enum BrandProps {
  Toyota
  Honda
  Volkswagen
  Hyundai
  Fiat
  Caoa_Chery
  Byd
  Bmw
  Renault
  Jeep
  Ram
  Nissan
  Peugeot
  Chevrolet
  Jac
  Land_Rover
  Mercedes
  Mitsubishi
  Volvo
  Rolls_Royce
  Subaru
  Porsche
  Suzuki
  Mercedes_AMG
  Lexus
  Kia
  Maserati
  Mini
  MCLaren
  Jaguar
  Haval
  Audi
  Citroen
  Ford
  Aston_Martin
}

enum CambioEnun {
  Automatico
  Manual
}

enum CombustivelEnun {
  Gasolina
  Alcool
  Diesel
  Eletrico
  Hibrido
}

enum Select {
  Sim
  Nao
}

model Car {
  id                  String            @id @default(uuid())
  linkImg             String
  name                String
  model               String
  City                String
  description         String?
  Year                String
  kmRounds            String
  Cambio              CambioEnun[]
  category            Category          @relation(fields: [categoryId], references: [id])
  brand               Brand             @relation(fields: [brandId], references: [id])
  Combustivel         CombustivelEnun[]
  FinalDaPlaca        String
  cor                 String
  AceitaTroca         Select[]
  Garantia_De_Fabrica Select[]
  Price               String
  vehicleItems        String
  NomeDoVendedor      String
  Whatsapp            String
  categoryId          String
  brandId             String
}

model Category {
  id        String          @id @default(uuid())
  categoria CategoryProps[]
  cars      Car[]
}

model Brand {
  id    String       @id @default(uuid())
  brand BrandProps[]
  cars  Car[]
}
