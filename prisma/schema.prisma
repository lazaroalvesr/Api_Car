generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CategoryProps {
  Picape
  Sedan
  SUV
  Eletrico
  Hibrido
  Utilitario_Esportivo
  Hatchback
  Van_Utilitario
}

enum BrandProps {
  Toyota
  Honda
  Volkswagen
  Hyundai
  Tesla
  Fiat
  Caoa_Chery
  Byd
  Bmw
  Renault
  Jeep
  Ram
  Nissan
  Peugeot
  Chevrolet
  Jac_Motors
  Land_Rover
  Mercedes
  Mitsubishi
  Volvo
  Rolls_Royce
  Subaru
  Porsche
  Suzuki
  Mercedes_AMG
  Lexus
  Kia
  Maserati
  Mini_Cooper
  MCLaren
  Jaguar
  Haval
  Audi
  Citroen
  Ford
  Aston_Martin
}

enum CambioEnun {
  CVT
  Automatico
  Manual
}

enum CombustivelEnun {
  Gasolina_E_Alcool
  Alcool
  Diesel
  Eletrico
  Hibrido
  Gasolina
}

enum Select {
  Sim
  Nao
}

model Car {
  id                  String            @id @default(uuid())
  linkBanner          String
  linkImg             String?
  linkImg2            String?
  name                String
  model               String
  City                String
  description         String?
  Year                String
  kmRounds            String
  Cambio              CambioEnun[]
  category            Category          @relation(fields: [categoryId], references: [id])
  brand               Brand             @relation(fields: [brandId], references: [id])
  Combustivel         CombustivelEnun[]
  FinalDaPlaca        String?
  cor                 String?
  Blindado            Select?
  AceitaTroca         Select[]
  Garantia_De_Fabrica Select?
  IPVA_PAGO           Select?
  Licenciado          Select?
  Price               String
  vehicleItems        String
  NomeDoVendedor      String
  Whatsapp            String
  categoryId          String
  brandId             String
}

model Category {
  id        String          @id @default(uuid())
  categoria CategoryProps[]
  cars      Car[]
}

model Brand {
  id      String       @id @default(uuid())
  linkImg String
  brand   BrandProps[]
  cars    Car[]
}
